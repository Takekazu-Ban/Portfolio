<div class="row">
  <div class="col-xs-6">
    <h2>プロフィール</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 180, 180, format: 'jpeg' , class: "img-circle" %>
    <div class="profile">
    <% if current_user == @user %>
    <%= link_to "会員編集", edit_user_path(@user.id), class: 'btn btn-primary' %>
    <% end %><br>
    <table class="table">
    <tr><th> ニックネーム    :</th>
    <td> <%= @user.nickname %> </td></tr>
    <tr><th> 性別 :</th>
    <td> <%= @user.gender %> </td></tr>
    <tr><th> 年齢 :</th>
    <td> <%= @user.age %>歳 </td></tr>
  </table>
  </div>

    <div class="col-xs-6">
    <div class="introduction">
      <label for="introduction"> 自己紹介 </label>
      <%= @user.introduction %>
    </div>
    </div>
  </div>

  <div class="col-xs-6">
  <%= render 'users/circles/organizer_list' %>


  <h2>参加サークル</h2>
  <table class="table">
    <% @circles.each do |circle| %>
    <%= link_to users_circle_path(@user.id) do %>
    <tr>
      <td><strong><%= circle.circle_name %></strong></td>
      <td>ジャンル：<%= circle.genre %></td>
      <td>
        <%= link_to users_circle_path(circle.id) do %>
        <%= attachment_image_tag circle, :circle_img, :fill, 60, 60, format: 'jpeg' %>
        <% end %>
      </td>
      <td>地域：<%= circle.active_area %></td>
      <td>メンバー数：<%= circle.circle_joins.count %></td>

    </tr>
    <% end %>
    <% end %>
  </table>
  <%#= paginate @circles1 %>



  <table class="table">
    <% @circles1.each do |circle| %>
    <%= link_to users_circle_path(@user.id) do %>
    <tr>
      <td><strong><%= circle.circle_id %></strong></td>

    </tr>
    <% end %>
    <% end %>
  </table>
</div>
</div>


