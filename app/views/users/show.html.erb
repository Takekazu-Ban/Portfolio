<h2>会員情報</h2>
<%= link_to "会員編集", edit_user_path(@user.id), class: 'btn btn-primary' %>
<label for="profile_image"> プロフィール画像 </label>
<%= attachment_image_tag @user, :profile_image, :fill, 300, 300, format: 'jpeg' , class: "img-circle" %>
<label for="nickname"> ニックネーム </label>
<%= @user.nickname %>
<label for="gender"> 性別 </label>
<%= @user.gender %>
<label for="age"> 年齢 </label>
<%= @user.age %>歳

<label for="introduction"> 自己紹介 </label>
<%= @user.introduction %>


<h2>主催サークル</h2>
<table class="table">
  <% @circles.each do |circle| %>
      <tr>
        <td><strong><%= circle.circle_name %></strong></td>
        <td>ジャンル：<%= circle.genre %></td>
        <td>
          <%= link_to users_circle_path(circle.id) do %>
          <%= attachment_image_tag circle, :circle_img, :fill, 60, 60, format: 'jpeg' %>
          <% end %>
          </td>
        <td>地域：<%= circle.active_area %></td>
        <td>メンバー数：<%=  %></td>
        <% if current_user %>
          <td><%= link_to "編集", edit_users_circle_path(circle.id) %></td>
          <td><%= link_to "解散", users_circle_path(circle.id), method: :delete %></td>
        <% end %>
      </tr>
  <% end %>
</table>
<%= paginate @circles %>


<h2>参加サークル</h2>
<table class="table">
  <% @circles.each do |circle| %>
    <%= link_to users_circle_path(@user.id) do %>
