<h2>新規会員登録</h2>
<div class="row">
  <div class="container">
    <div class="sign_up">
      <table class="table table-striped">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%= render 'users/shared/form', f: f %>

        <div class="field_new">
          <tr>
            <td><%= f.label :メールアドレス %>(必項)</td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
        </div>

        <div class="field_new">
          <tr>
            <td>
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>(必項)
              <% end %>
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
        </div>

        <div class="field_new">
          <tr>
            <td><%= f.label :パスワード %>(確認用)(必項)</td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
        </div>
      </table>
      <div class="actions">
        <%= f.submit "新規登録", style: "width: 100%;" %>
        <%= render "users/shared/links" %>
      </div>
      <% end %>
    </div>
  </div>
</div>