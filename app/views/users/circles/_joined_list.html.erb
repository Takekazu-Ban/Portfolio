<h3>参加サークル</h3>
  <table class="table">
    <% @circles_joined.each do |circle| %>
    <tr>
      <td><strong>
            <%= circle.circle_name %>
      </strong></td>
      <td>ジャンル：<%= circle.genre %></td>
      <td>
        <% if controller.controller_name == 'joins' && controller.action_name == 'index' %>
          <% link_to "a", "users/circle/join/circle_id/joins/#{current_user.joined_circles.ids}"  %>
             <%#= attachment_image_tag circle, :circle_img, :fill, 80, 60, format: 'jpeg' %>
               <% end %>
        <%# else %>


        <%= link_to users_circle_path(circle.id) do %>
        <%= attachment_image_tag circle, :circle_img, :fill, 80, 60, format: 'jpeg' %>
        <% end %>
        <%# end %>
      </td>
      <td>地域：<%= circle.active_area %></td>
      <td>メンバー数：<%= circle.circle_joins.count %></td>

    </tr>
    <% end %>
  </table>
  <%= paginate @circles_joined %>