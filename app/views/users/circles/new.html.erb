<h2>新規サークル作成</h2>
<div class="row">
    <div class="col-xs-6">
  <%= form_for [:users, @circle] do |circle| %>
  <table>
    <tr>
        <td><%= circle.label :genre, "ジャンル" %> (必項)</td>
        <td><%= circle.select :genre, Circle.genres.keys, {prompt: '選択して下さい'} %></td>
    </tr>
     <tr>
        <td><%= circle.label :circle_name, "サークル名" %> (必項)</td>
        <td><%= circle.text_field :circle_name, size: "15" %></td>
    </tr>

    <tr>
        <td><%= circle.label :circle_img, "サークルイメージ画像" %>
            <%= attachment_image_tag @circle, :circle_img, :fill, 300, 300, format: 'jpeg',fallback: "no_image.jpeg",size:
    "300x300" %></td>
    </tr>
    <tr>
        <td><%= circle.attachment_field :circle_img %></td>
    </tr>
    <tr>
        <td><%= circle.label :explanation, "説明文" %> (必項)</td>
    </tr>
    <tr>
        <td><%= circle.text_area :explanation, size:"50" %></td>
    </tr>
</table>

</div>
    <%= circle.label :active_area, "活動地域" %> (必項)
    <%= circle.select :active_area, Circle.active_areas.keys, {prompt: '選択して下さい'} %>

    <%= circle.label :area_show, "活動地域詳細" %>
    <%= circle.text_field :area_show %>


    <%= circle.label :age_group, "募集年齢層" %> (必項)
    <%= circle.select :age_group, Circle.age_groups.keys, {prompt: '選択して下さい'} %>

    <%= circle.label :recruitment, "募集人数" %>
    <%= circle.number_field :recruitment, min: 1 %> 人

    <%= circle.label :cost, "費用" %> ¥
    <%= circle.number_field :cost %>

    <%= circle.submit('サークル作成', class: "btn btn-primary") %>
  <% end %>
</div>