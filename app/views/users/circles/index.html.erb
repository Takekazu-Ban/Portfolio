<div class="row">
  <div class="col-xs-8">
<!-- サークル一覧フォーム -->
<table class="table">
  <% @circles.each do |circle| %>
      <tr>
        <td><strong><%= circle.circle_name %></strong></td>
        <td>ジャンル：<%= circle.genre %></td>
        <td>
          <%= link_to users_circle_path(circle.id) do %>
          <%= attachment_image_tag circle, :circle_img, :fill, 60, 60, format: 'jpeg' %>
          <% end %>
          </td>
        <td>地域：<%= circle.active_area %></td>
        <td>メンバー数：<%= circle.circle_joins.count %>人</td>
        <td>
          <%= link_to user_path(circle.user.id) do %>
    <%= attachment_image_tag circle.user, :profile_image, format: 'jpeg',size:"60x60" , class: "img-circle" %>
  <% end %>
        </td>
      </tr>
  <% end %>
</table>
<%= paginate @circles %>
</div>


<!-- 検索フォーム -->
<div class="col-xs-4">
<h4>サークルを検索</h4>
<div class="search_field">
<%= form_tag(users_circle_index_path, :method => 'get') do %>
  <%= text_field_tag :search %><br>
  年齢層
  <%= select_tag "age_group", options_for_select([["指定しない","指定しない"],["20代","遊ぶ"],["30代","30代"],["40代","40代"],["50代以上","50代以上"]]) %><br>
  <%= submit_tag '検索', :circle_name => nil %>
<% end %>
</div>
</div>
</div>